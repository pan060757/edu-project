<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>zgjyb</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是zgjyb</description>
    </property>

	<property>
        <name>zgjyb.sourceId</name>
        <value>53</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>zgjyb</description>
    </property>
	
    <property>
        <name>zgjyb.crawldb</name>
        <value>Zgjyb-crawler</value>
        <description>Zgjyb的主目录</description>
    </property>
    
    <property>
        <name>zgjyb.publisher</name>
        <value>中国教育报</value>
        <description>新闻发布平台</description>
    </property>


    <property>
        <name>zgjyb.path.seeds</name>
        <value>seeds/zgjyb/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>zgjyb.next.nextpage.selector</name>
        <value>div.pages a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>zgjyb.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zgjyb.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zgjyb.crawler.reg.reg1</name>
        <value>http://www.qnr.cn/news/\d{4}/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>zgjyb.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>zgjyb.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
