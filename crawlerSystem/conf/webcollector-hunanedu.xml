<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property>
        <name>crawler.suffix</name>
        <value>hunanedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是hunanedu</description>
    </property>
	
    <property>
        <name>hunanedu.sourceId</name>
        <value>17</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>hunanedu</description>
    </property>
	
    <property>
        <name>hunanedu.crawldb</name>
        <value>HunanEdu-crawler</value>
        <description>hunanedu的主目录</description>
    </property>
    
    <property>
        <name>hunanedu.publisher</name>
        <value>湖南教育网</value>
        <description>新闻发布平台</description>
    </property>


    <property>
        <name>hunanedu.path.seeds</name>
        <value>seeds/hunanedu/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>hunanedu.next.nextpage.selector</name>
        <value>div.pagebox a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>hunanedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>hunanedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>hunanedu.crawler.reg.reg1</name>
        <value>http://www.hnedu.cn.*/show/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>hunanedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>hunanedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>

</configuration>
