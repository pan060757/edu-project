<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>gczedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是观察者</description>
    </property>

    <property>
        <name>gczedu.sourceId</name>
        <value>63</value>
        <description>网站源对应的sourceId</description>
    </property>

    <property>
        <name>gczedu.crawldb</name>
        <value>gczedu-crawler</value>
        <description>GansuEdu的主目录</description>
    </property>

    <property>
        <name>gczedu.publisher</name>
        <value>观察者</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>gczedu.path.seeds</name>
        <value>seeds/gczedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>gczedu.next.nextpage.selector</name>
        <value>div#prenext a[title="下一页"]</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>gczedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>gczedu.crawler.reg.reg1</name>
        <value>http://www.guancha.cn/.*/\d{4}_\d{2}.*.[s]html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>gczedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>gczedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>

</configuration>
