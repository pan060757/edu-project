<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>nmgedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是nmgedu</description>
    </property>

	<property>
        <name>nmgedu.sourceId</name>
        <value>28</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>nmgedu</description>
    </property>

    <property>
        <name>nmgedu.crawldb</name>
        <value>NmgEdu-crawler</value>
        <description>NmgEdu的主目录</description>
    </property>
    
    <property>
        <name>nmgedu.publisher</name>
        <value>内蒙古教育新闻网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>nmgedu.path.seeds</name>
        <value>seeds/nmgedu/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>nmgedu.next.nextpage.selector</name>
        <value>td.black14_l a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>nmgedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>nmgedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>nmgedu.crawler.reg.reg1</name>
        <value>http://edu.nmgnews.com.cn/system/2015.*.shtml</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>nmgedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>nmgedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
