<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>jzb</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是jzb</description>
    </property>

	<property>
        <name>jzb.sourceId</name>
        <value>26</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>jzb</description>
    </property>
	
    <property>
        <name>jzb.crawldb</name>
        <value>Jzb-crawler</value>
        <description>Jzb的主目录</description>
    </property>
    
    <property>
        <name>jzb.publisher</name>
        <value>家长帮资讯</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>jzb.path.seeds</name>
        <value>seeds/jzb/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>jzb.next.nextpage.selector</name>
        <value>div#pgt a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>jzb.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>jzb.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>jzb.crawler.reg.reg1</name>
        <value>http://jzb.com/bbs/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>jzb.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>jzb.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
