<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>gzedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是gzedu</description>
    </property>

	 <property>
        <name>gzedu.sourceId</name>
        <value>13</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是gzedu</description>
    </property>
	
    <property>
        <name>gzedu.crawldb</name>
        <value>GzEdu-crawler</value>
        <description>GzEdu的主目录</description>
    </property>
    
    <property>
        <name>gzedu.publisher</name>
        <value>贵州教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>gzedu.path.seeds</name>
        <value>seeds/gzedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>gzedu.next.nextpage.selector</name>
        <value>div.pager a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>gzedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>gzedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>gzedu.crawler.reg.reg1</name>
        <value>http://www.gzsedu.cn/Item/\d{5}.aspx</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>gzedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>gzedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
