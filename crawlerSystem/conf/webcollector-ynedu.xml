<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>crawler.suffix</name>
        <value>ynedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是ynedu</description>
    </property>

    <property>
        <name>ynedu.sourceId</name>
        <value>43</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是ynedu</description>
    </property>

    <property>
        <name>ynedu.crawldb</name>
        <value>YnEdu-crawler</value>
        <description>YunNanEdu的主目录</description>
    </property>

    <property>
        <name>ynedu.publisher</name>
        <value>云南教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>ynedu.path.seeds</name>
        <value>seeds/ynedu/seed.txt</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>ynedu.next.nextpage.selector</name>
        <value>a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>ynedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ynedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ynedu.crawler.reg.reg1</name>
        <value>http://www.ynjy.cn/.*article.*</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>ynedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>ynedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>
</configuration>
