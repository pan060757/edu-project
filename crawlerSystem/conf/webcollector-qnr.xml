<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>qnr</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是qnr</description>
    </property>

	<property>
        <name>qnr.sourceId</name>
        <value>31</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>qnr</description>
    </property>
	
    <property>
        <name>qnr.crawldb</name>
        <value>Qnr-crawler</value>
        <description>Qnr的主目录</description>
    </property>
    
    <property>
        <name>qnr.publisher</name>
        <value>青年人</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>qnr.path.seeds</name>
        <value>seeds/qnr/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>qnr.next.nextpage.selector</name>
        <value>div.showpage a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>qnr.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>qnr.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>qnr.crawler.reg.reg1</name>
        <value>http://www.qnr.cn/news/\d{4}/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>qnr.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>qnr.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
