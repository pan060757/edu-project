<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>ahedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是ahedu</description>
    </property>

    <property>
        <name>ahedu.sourceId</name>
        <value>19</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是ahedu</description>
    </property>

    <property>
        <name>ahedu.crawldb</name>
        <value>AnEdu-crawler</value>
        <description>AnhuiEdu的主目录</description>
    </property>

    <property>
        <name>ahedu.publisher</name>
        <value>安徽教育网</value>
        <description>新闻发布平台</description>
</property>

    <property>
        <name>ahedu.path.seeds</name>
        <value>seeds/ahedu/seed.txt</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>ahedu.next.nextpage.selector</name>
        <value>a.pagenav</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>ahedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ahedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ahedu.crawler.reg.reg1</name>
        <value>http://www.ahedu.gov.cn/.*/view/.*</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>ahedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>ahedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
