<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>zgjy</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是zgjy</description>
    </property>

	<property>
        <name>zgjy.sourceId</name>
        <value>49</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>zgjy</description>
    </property>
	
    <property>
        <name>zgjy.crawldb</name>
        <value>Zgjy-crawler</value>
        <description>Zgjy的主目录</description>
    </property>
    
    <property>
        <name>zgjy.publisher</name>
        <value>中国教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>zgjy.path.seeds</name>
        <value>seeds/zgjy/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>zgjy.next.nextpage.selector</name>
        <value>td[height=30] a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>zgjy.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zgjy.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zgjy.crawler.reg.reg1</name>
        <value>http://www.edu.cn/.*/jiao_yu.*/.*.shtml</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>zgjy.crawler.reg.reg2</name>
        <value>http://www.edu.cn/.*/.*/t.*.shtml</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>zgjy.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>zgjy.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
