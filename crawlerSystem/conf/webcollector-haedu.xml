<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>haedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是haedu</description>
    </property>

	 <property>
        <name>haedu.sourceId</name>
        <value>14</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>haedu</description>
    </property>
	
    <property>
        <name>haedu.crawldb</name>
        <value>HaEdu-crawler</value>
        <description>HaEdu的主目录</description>
    </property>
    
    <property>
        <name>haedu.publisher</name>
        <value>河南教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>haedu.path.seeds</name>
        <value>seeds/haedu/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>haedu.next.nextpage.selector</name>
        <value>div.pages-1 a.on</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>haedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>haedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>haedu.crawler.reg.reg1</name>
        <value>http://renwu.haedu.cn/dxscg/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>haedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>haedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>

</configuration>
