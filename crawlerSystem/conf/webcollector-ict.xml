<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>ictedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是ictedu</description>
    </property>

	 <property>
        <name>ictedu.sourceId</name>
        <value>50</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>ictedu</description>
    </property>
	
    <property>
        <name>ictedu.crawldb</name>
        <value>IctEdu-crawler</value>
        <description>IctEdu的主目录</description>
    </property>
    
    <property>
        <name>ictedu.publisher</name>
        <value>中国教育信息网</value>
        <description>新闻发布平台</description>
    </property>


    <property>
        <name>ictedu.path.seeds</name>
        <value>seeds/ictedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>ictedu.next.nextpage.selector</name>
        <value>ul.list-1 a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>ictedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ictedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ictedu.crawler.reg.reg1</name>
        <value>http://renwu.haedu.cn/dxscg/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>ictedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>ictedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
