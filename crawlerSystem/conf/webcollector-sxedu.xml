<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>sxedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是sxedu</description>
    </property>

	<property>
        <name>sxedu.sourceId</name>
        <value>37</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>sxedu</description>
    </property>
	
	
    <property>
        <name>sxedu.crawldb</name>
        <value>Sxedu-crawler</value>
        <description>Sxedu的主目录</description>
    </property>
    
    <property>
        <name>sxedu.publisher</name>
        <value>山西教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>sxedu.path.seeds</name>
        <value>seeds/sxedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>sxedu.next.nextpage.selector</name>
        <value>td[colspan=3][align=center] a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>sxedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>sxedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>sxedu.crawler.reg.reg1</name>
        <value>http://www.sxedu.gov.cn/BMGZ/.*</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>sxedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>sxedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
