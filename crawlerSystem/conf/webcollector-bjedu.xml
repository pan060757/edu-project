<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>bjedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是bjedu</description>
    </property>

	   <property>
        <name>bjedu.sourceId</name>
        <value>1</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是bjedu</description>
    </property>
	
    <property>
        <name>bjedu.crawldb</name>
        <value>BjEdu-crawler</value>
        <description>BjEdu的主目录</description>
    </property>
    
    <property>
        <name>bjedu.publisher</name>
        <value>北京教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>bjedu.path.seeds</name>
        <value>seeds/bjedu/seed.txt</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>bjedu.next.nextpage.selector</name>
        <value>a.Normal</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>bjedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>bjedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>bjedu.crawler.reg.reg1</name>
        <value>http://www.bjedu.gov.cn/publish/.*/info.*</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>bjedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>bjedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
