<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>hainanedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是hainanedu</description>
    </property>

	<property>
        <name>hainanedu.sourceId</name>
        <value>18</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>hainanedu</description>
    </property>
	
    <property>
        <name>hainanedu.crawldb</name>
        <value>HainanEdu-crawler</value>
        <description>HainanEdu的主目录</description>
    </property>
    
    <property>
        <name>hainanedu.publisher</name>
        <value>海南教育在线</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>hainanedu.path.seeds</name>
        <value>seeds/hainanedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>hainanedu.next.nextpage.selector</name>
        <value>a.a1</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>hainanedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>hainanedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>hainanedu.crawler.reg.reg1</name>
        <value>http://www.hneol.com.cn/2015/cglx_0724/\d{5}.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>hainanedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>hainanedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
