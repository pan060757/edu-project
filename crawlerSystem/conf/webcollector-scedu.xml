<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>scedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是scedu</description>
    </property>

	<property>
        <name>scedu.sourceId</name>
        <value>33</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>scedu</description>
    </property>
	
    <property>
        <name>scedu.crawldb</name>
        <value>Scedu-crawler</value>
        <description>Scedu的主目录</description>
    </property>
    
    <property>
        <name>scedu.publisher</name>
        <value>四川教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>scedu.path.seeds</name>
        <value>seeds/scedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>scedu.next.nextpage.selector</name>
        <value>a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>scedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>scedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>scedu.crawler.reg.reg1</name>
        <value>http://www.scedu.net/.*</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>scedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>scedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
