<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>crawler.suffix</name>
        <value>zjedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是zjedu</description>
    </property>

	<property>
        <name>zjedu.sourceId</name>
        <value>38</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>zjedu</description>
    </property>
	
    <property>
        <name>zjedu.crawldb</name>
        <value>Zjedu-crawler</value>
        <description>Zjedu的主目录</description>
    </property>
    
    <property>
        <name>zjedu.publisher</name>
        <value>中教网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>zjedu.path.seeds</name>
        <value>seeds/zjedu/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>zjedu.next.nextpage.selector</name>
        <value>a[title="下一页"]</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>zjedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zjedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zjedu.crawler.reg.reg1</name>
        <value>http://www.teachercn.com/EduNews/News_.*?/\d{4}-\d{1,2}/\d{1,2}/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>zjedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>zjedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>

</configuration>
