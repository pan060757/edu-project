<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>snedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是snedu</description>
    </property>

	<property>
        <name>snedu.sourceId</name>
        <value>35</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>snedu</description>
    </property>
	
    <property>
        <name>snedu.crawldb</name>
        <value>Snedu-crawler</value>
        <description>Snedu的主目录</description>
    </property>
    
    <property>
        <name>snedu.publisher</name>
        <value>陕西教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>snedu.path.seeds</name>
        <value>seeds/snedu/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>snedu.next.nextpage.selector</name>
        <value>a.next</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>snedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>snedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>snedu.crawler.reg.reg1</name>
        <value>http://.*.snedu.com/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>snedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>snedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
