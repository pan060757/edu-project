<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>xjedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是xjedu</description>
    </property>

	<property>
        <name>xjedu.sourceId</name>
        <value>40</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>xjedu</description>
    </property>
	
    <property>
        <name>xjedu.crawldb</name>
        <value>Xjedu-crawler</value>
        <description>Xjedu的主目录</description>
    </property>
    
    <property>
        <name>xjedu.publisher</name>
        <value>新疆教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>xjedu.path.seeds</name>
        <value>seeds/xjedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>xjedu.next.nextpage.selector</name>
        <value>ul.pagelist a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>xjedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>xjedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>xjedu.crawler.reg.reg1</name>
        <value>http://www.xjedu.com.cn/.*/\d{4}/.*\d{4}.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>xjedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>xjedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
