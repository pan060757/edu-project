<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>zjol</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是zjol</description>
    </property>

	<property>
        <name>zjol.sourceId</name>
        <value>41</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>zjol</description>
    </property>
	
    <property>
        <name>zjol.crawldb</name>
        <value>Zjol-crawler</value>
        <description>Zjol的主目录</description>
    </property>
    
    <property>
        <name>zjol.publisher</name>
        <value>浙江教育在线</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>zjol.path.seeds</name>
        <value>seeds/zjol/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>zjol.next.nextpage.selector</name>
        <value>div.pages a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>zjol.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zjol.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>zjol.crawler.reg.reg1</name>
        <value>http://edu.zjol.com.cn/system/\d{4}/.*.shtml</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>zjol.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>zjol.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
