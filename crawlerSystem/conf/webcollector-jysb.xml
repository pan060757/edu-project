<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property>
        <name>crawler.suffix</name>
        <value>jysb</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是jysb</description>
    </property>
	
	 <property>
        <name>jysb.sourceId</name>
        <value>25</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>jysb</description>
    </property>

    <property>
        <name>jysb.crawldb</name>
        <value>Jysb-crawler</value>
        <description>Jysb的主目录</description>
    </property>
    
    <property>
        <name>jysb.publisher</name>
        <value>教育时报</value>
        <description>新闻发布平台</description>
    </property>


    <property>
        <name>jysb.path.seeds</name>
        <value>seeds/jysb/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>jysb.next.nextpage.selector</name>
        <value>div.pages a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>jysb.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>jysb.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>jysb.crawler.reg.reg1</name>
        <value>.*.shuren100.com/article/.*</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>jysb.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>jysb.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>

</configuration>
