<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property>
        <name>crawler.suffix</name>
        <value>hljedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是hljedu</description>
    </property>

	<property>
        <name>hljedu.sourceId</name>
        <value>16</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>hljedu</description>
    </property>
	
    <property>
        <name>hljedu.crawldb</name>
        <value>HljEdu-crawler</value>
        <description>FjEdu的主目录</description>
    </property>
    
    <property>
        <name>hljedu.publisher</name>
        <value>黑龙江教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>hljedu.path.seeds</name>
        <value>seeds/hljedu/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>hljedu.next.nextpage.selector</name>
        <value>a.a1</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>hljedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>hljedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>hljedu.crawler.reg.reg1</name>
        <value>http://www.hljedu.net.cn/2015/.*\d{5}.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>hljedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>hljedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
