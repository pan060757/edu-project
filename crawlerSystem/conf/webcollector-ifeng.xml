<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>ifeng</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是ifeng</description>
    </property>
    <property>
        <name>ifeng.sourceId</name>
        <value>20</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>ifeng</description>
    </property>
	
    <property>
        <name>ifeng.crawldb</name>
        <value>Ifeng-crawler</value>
        <description>Sina的主目录</description>
    </property>
    
    <property>
        <name>ifeng.publisher</name>
        <value>凤凰网教育</value>
        <description>新闻发布平台</description>
    </property>


    <property>
        <name>ifeng.path.seeds</name>
        <value>seeds/ifeng/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>ifeng.next.nextpage.selector</name>
        <value>div.m_page span a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>ifeng.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ifeng.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>ifeng.crawler.reg.reg1</name>
        <value>http://edu.ifeng.com/.*.shtml</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>ifeng.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>ifeng.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>

    <property>
        <name>ifeng.comment.selector</name>
        <value>meta[name=comment]</value>
        <description>页面评论的选择标签</description>
    </property>

</configuration>
