<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>jsedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是jsedu</description>
    </property>

	<property>
        <name>jsedu.sourceId</name>
        <value>22</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>jsedu</description>
    </property>
	
    <property>
        <name>jsedu.crawldb</name>
        <value>Jsedu-crawler</value>
        <description>主目录</description>
    </property>

    <property>
        <name>jsedu.publisher</name>
        <value>江苏教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>jsedu.path.seeds</name>
        <value>seeds/jsedu/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>jsedu.next.nextpage.selector</name>
        <value>div#newsPages a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>jsedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式，去除所有的带#的url</description>
    </property>

    <property>
        <name>jsedu.crawler.reg.reg1</name>
        <value>http://www.jsenews.com/news/.*.shtml</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>jsedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>
</configuration>
