<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>xinlang</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是xinlang</description>
    </property>
	
	<property>
        <name>xinlang.sourceId</name>
        <value>46</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>xinlang</description>
    </property>
	
    <property>
        <name>xinlang.crawldb</name>
        <value>Xinlang-crawler</value>
        <description>Xinlang的主目录</description>
    </property>
    
    <property>
        <name>xinlang.publisher</name>
        <value>新浪博客</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>xinlang.path.seeds</name>
        <value>seeds/xinlang/seed.txt</value>
        <description>种子</description>
    </property>


    <property>
        <name>xinlang.next.nextpage.selector</name>
        <value>span.pagebox_next a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>xinlang.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>xinlang.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>xinlang.crawler.reg.reg1</name>
        <value>http://blog.sina.com.cn/s/.*.html</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>xinlang.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>xinlang.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>
</configuration>
