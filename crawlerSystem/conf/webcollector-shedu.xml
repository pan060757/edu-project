<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>shedu</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是shedu</description>
    </property>

    <property>
        <name>shedu.sourceId</name>
        <value>45</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是shedu</description>
    </property>

    <property>
        <name>shedu.crawldb</name>
        <value>ShEdu-crawler</value>
        <description>ShanghaiEdu的主目录</description>
    </property>

    <property>
        <name>shedu.publisher</name>
        <value>上海教育网</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>shedu.path.seeds</name>
        <value>seeds/shedu/seed.txt</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>shedu.next.nextpage.selector</name>
        <value>a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>shedu.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>shedu.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>shedu.crawler.reg.reg1</name>
        <value>http://www.shmec.gov.cn/html/article/.*\d{5}.php</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>shedu.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>shedu.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>


</configuration>
