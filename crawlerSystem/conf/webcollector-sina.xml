<?xml version="1.0" encoding="UTF-8"?>
<configuration>



    <property>
        <name>crawler.suffix</name>
        <value>sina</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是sina</description>
    </property>

	<property>
        <name>sina.sourceId</name>
        <value>34</value>
        <description>爬虫配置的前缀，比如在此处所有的配置第一项都是>sina</description>
    </property>
	
    <property>
        <name>sina.crawldb</name>
        <value>Sina-crawler</value>
        <description>Sina的主目录</description>
    </property>
    
    <property>
        <name>sina.publisher</name>
        <value>新浪教育</value>
        <description>新闻发布平台</description>
    </property>

    <property>
        <name>sina.path.seeds</name>
        <value>seeds/sina/seed.txt</value>
        <description>种子</description>
    </property>

    <property>
        <name>sina.seeds.seed1</name>
        <value>http://roll.edu.sina.com.cn/a/lxcg/hwsj/index.shtml</value>
        <description>种子url</description>
    </property>

    <property>
        <name>sina.next.nextpage.selector</name>
        <value>span.pagebox_next a</value>
        <description>"下一页"的选择标签</description>
    </property>

    <property>
        <name>sina.next.reg.reg1</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>sina.next.reg.reg2</name>
        <value>-.*#.*</value>
        <description>nextPagerCrawler的正则表达式</description>
    </property>

    <property>
        <name>sina.crawler.reg.reg1</name>
        <value>http://edu.sina.com.cn/.*\d{10}.*</value>
        <description>crawler的正则表达式,只匹配新闻页面</description>
    </property>

    <property>
        <name>sina.crawler.reg.reg2</name>
        <value>-.*\.(jpg|png|gif).*</value>
        <description>crawler的正则表达式,过滤掉图片的url</description>
    </property>

    <property>
        <name>sina.crawler.reg.reg3</name>
        <value>-.*#.*</value>
        <description>crawler的正则表达式,不要爬取包含"#"的链接</description>
    </property>

    <property>
        <name>sina.comment.selector</name>
        <value>meta[name=comment]</value>
        <description>页面评论的选择标签</description>
    </property>

</configuration>
